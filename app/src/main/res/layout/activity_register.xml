<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/bleu"
        android:textStyle="bold"
        android:text="S'inscrire"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/matricule"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/reg"
        android:layout_height="50dp"
        android:hint=" Matricule"
        android:inputType="text"
        android:padding="13dp"
        android:background="@drawable/inputs"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableStart="@drawable/user"
        android:drawableLeft="@drawable/user"
        />
    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:layout_below="@id/matricule"
        android:hint=" Nom Et Prénom"
        android:inputType="text"
        android:padding="13dp"
        android:background="@drawable/inputs"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableStart="@drawable/user"
        android:drawableLeft="@drawable/user"
        />

    <EditText
        android:id="@+id/register_mail"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:hint=" Email"
        android:layout_below="@id/full_name"
        android:inputType="textEmailAddress"
        android:padding="13dp"
        android:background="@drawable/inputs"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableStart="@drawable/mail"
        android:drawableLeft="@drawable/mail"
        />


    <EditText
        android:id="@+id/register_pw"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:hint=" Mot de passe"
        android:layout_below="@id/register_mail"
        android:inputType="textPassword"
        android:padding="13dp"
        android:background="@drawable/inputs"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableStart="@drawable/key"
        android:drawableLeft="@drawable/key"
        />
    <EditText
        android:id="@+id/confirm_pw"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/register_pw"
        android:layout_height="50dp"
        android:hint=" Confirmer mot de passe"
        android:inputType="textPassword"
        android:padding="13dp"
        android:background="@drawable/inputs"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableStart="@drawable/key"
        android:drawableLeft="@drawable/key"
        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_pw"
        android:textSize="25sp"
        android:textColor="@color/bleu"
        android:textStyle="bold"
        android:text="Quelle Est Votre Filière ?"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/sm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_gris_bleu"
        android:text="SM"
        android:textColor="@color/bleu"
        android:textSize="22sp"
        android:textAllCaps="false"

        />

    <Button
        android:id="@+id/mi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt"
        android:padding="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bouton"
        android:textColor="@color/blanc"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:text="MI"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:text="Specialité preférée ?"
        android:textColor="@color/bleu"
        android:textSize="25sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/spe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_gris_bleu"
        android:text="Physique"
        android:padding="20dp"
        android:textColor="@color/bleu"
        android:textSize="22sp"
        android:textAllCaps="false"

        />

    <Button
        android:id="@+id/spe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt2"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:background="@drawable/bouton"
        android:textColor="@color/blanc"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:text="Informatique"
        />
    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:text="Moyenne Unité lewla ?"
        android:textColor="@color/bleu"
        android:textSize="25sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/moyinfo"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt3"
        android:hint=" Moyenne Sur 20"
        android:inputType="number"
        android:padding="13dp"
        android:background="@drawable/inputs"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        />
    <TextView
        android:id="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt3"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:text="Moyenne Unité Zawja ?"
        android:textColor="@color/bleu"
        android:textSize="25sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/moymath"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt4"
        android:hint=" Moyenne Sur 20"
        android:inputType="number"
        android:padding="13dp"
        android:background="@drawable/inputs"
        android:elevation="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        />



    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/moymath"
        android:layout_marginRight="30dp"
        android:background="@drawable/bouton"
        android:text="S'Inscrire"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textColor="@color/blanc"

        />

    <TextView
        android:id="@+id/haveit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Have An Account"
        android:layout_below="@id/submit"
        android:layout_margin="30dp"
        android:textStyle="bold"
        android:textSize="26dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="@drawable/inputs"
        android:gravity="center_horizontal" />


    </RelativeLayout>
</ScrollView>