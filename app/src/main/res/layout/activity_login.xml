<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se Connecter"
            android:textSize="45dp"

           android:layout_marginLeft="30dp"
            android:textColor="@color/bleu"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/loginmail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt"
            android:hint=" Enter Your Email"

            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:background="@drawable/inputs"
            android:layout_margin="20dp"
            android:drawableStart="@drawable/mail"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/mail" />
        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/loginmail"
            android:hint=" Enter Your Password"
            android:elevation="5dp"
            android:inputType="textPassword"
            android:padding="13dp"
            android:background="@drawable/inputs"
            android:layout_margin="20dp"
            android:drawableStart="@drawable/key"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/key" />

        <TextView
            android:id="@+id/forget_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="2dp"
            android:textAlignment="textEnd"
            android:padding="4dp"
            android:text="Forgot Your Password ?"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="end" />
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/forget_pw"
            android:text="Log In"
            android:textAllCaps="false"
            android:background="@drawable/bouton"
            android:drawableStart="@drawable/send"
            android:padding="13dp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textSize="15sp"
            android:textColor="#000"


            android:drawableLeft="@drawable/send" />
        <TextView
            android:id="@+id/register_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/submit"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:padding="4dp"
            android:text="Create A New Account ?"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center_horizontal" />

    </RelativeLayout>
</RelativeLayout>